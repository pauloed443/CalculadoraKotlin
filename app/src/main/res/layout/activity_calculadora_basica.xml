<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.paulo.calculadorakotlin.CalculadoraBasica">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:id="@+id/viewResult"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:gravity="end"
        android:enabled="false"
        android:layout_marginRight="20dp"
        android:text="0.0"
        android:id="@+id/result"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="175dp"
            android:layout_height="70dp"
            android:text="c"
            android:onClick="op"
            android:id="@+id/btnc"/>
        <Button
            android:layout_width="175dp"
            android:layout_height="70dp"
            android:text="CE"
            android:onClick="op"
            android:id="@+id/btnce"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="1"
                android:onClick="num"
                android:id="@+id/btn1"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="2"
                android:onClick="num"
                android:id="@+id/btn2"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="3"
                android:onClick="num"
                android:id="@+id/btn3"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="+"
                android:onClick="op"
                android:id="@+id/btnsoma"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="-"
                android:onClick="op"
                android:id="@+id/btnsub"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="4"
                android:onClick="num"
                android:id="@+id/btn4"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="5"
                android:onClick="num"
                android:id="@+id/btn5"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="6"
                android:onClick="num"
                android:id="@+id/btn6"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="*"
                android:onClick="op"
                android:id="@+id/btnmult"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="/"
                android:onClick="op"
                android:id="@+id/btndiv"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="7"
                android:onClick="num"
                android:id="@+id/btn7"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="8"
                android:onClick="num"
                android:id="@+id/btn8"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="9"
                android:onClick="num"
                android:id="@+id/btn9"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="^"
                android:onClick="op"
                android:id="@+id/btnpow"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="âˆš"
                android:onClick="op"
                android:id="@+id/btnsqrt"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginRight="20dp">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="0"
                android:onClick="op"
                android:id="@+id/btn0"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text=","
                android:onClick="op"
                android:id="@+id/btnvirgula"/>
            <Button
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:text="="
                android:onClick="op"
                android:id="@+id/btnigualdade"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
